<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/top_songs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_200"
        android:layout_marginTop="@dimen/dimen_50"
        android:background="@drawable/top_songs"
        android:fontFamily="@font/alegreya_bold"
        android:paddingTop="@dimen/dimen_28"
        android:text="@string/top_songs"
        android:textAlignment="center"
        android:textColor="#1A237E"
        android:textSize="@dimen/text_56" />

    <TextView
        android:id="@+id/top_artists"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_200"
        android:layout_marginTop="@dimen/dimen_50"
        android:background="@drawable/top_artists"
        android:fontFamily="@font/alegreya_bold"
        android:paddingTop="@dimen/dimen_28"
        android:text="@string/top_artists"
        android:textAlignment="center"
        android:textColor="#FFB300"
        android:textSize="@dimen/text_56" />

</LinearLayout>